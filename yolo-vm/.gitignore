# Terraform state files
*.tfstate
*.tfstate.*

# Terraform directory
.terraform/
.terraform.lock.hcl

# Override files
override.tf
override.tf.json
*_override.tf
*_override.tf.json

# Variable files (may contain sensitive data)
terraform.tfvars
*.auto.tfvars

# Crash log files
crash.log

